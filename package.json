    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.3",
    "@types/react-tracking": "^7.0.2",
    "@types/uuid": "^7.0.2",
    "@types/webpack": "^4.41.7",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "autoprefixer": "^9.7.4",
    "babel-eslint": "10.1.0",
    "babel-jest": "^25.4.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
