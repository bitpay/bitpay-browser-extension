  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "setupFiles": [
      "raf/polyfill"
    ],
    "testMatch": [
      "**/**/*.spec.(js|jsx|ts|tsx)|**/tests/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>source/setupTests.ts"
    ],
    "snapshotSerializers": [
      "enzyme-to-json"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|less|scss)$": "babel-jest"
    }
